<div class="page-header">
  Search results for:
  <h4><b><%= search_term %></b></h4>
</div>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <% unless results.nil? %>
      <% results.each do |user| %>
        <tr>
          <td>
        <span class="pull-left"><img src=<%= user[:image] %> alt="avatar" class="img-thumbnail" style="width:50px;height:50px">
        <a href="/nanotwitter/v1.0/users/<%= user[:username] %>"><%= user[:username] %></span></td>
        </tr>
      <% end %>
    <% end %>
    <% if results.nil? %>
    <tr>
      <td>Search returned no results!</td>
    </tr>
    <% end %>

  </table>


</div>