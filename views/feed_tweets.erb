<div class="container-fluid">
  <div>Tweets <span class="badge"><%= tweets.size %></span></div>
  <div class="row well" style="background-color: transparent">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <% unless tweets.empty? %>
          <% tweets.each do |tweet| %>
            <tr><td><%= erb tweet %></td></tr>
          <% end %>
        <% end %>
        <% if tweets.empty? %>
          <tr>
            <td class="text-center">There are no tweets! You should follow someone or try tweeting a message!</td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>