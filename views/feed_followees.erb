<div class="container-fluid">
  <div>Following <span class="badge"><%= users.size %></span></div>
  <div class="row well" style="background-color: transparent">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <% unless users.empty? %>
          <% users.each do |user| %>
            <tr><td class="text-center"><%= user %></td></tr>
          <% end %>
        <% end %>
        <% if users.empty? %>
          <tr>
            <td class="text-center">You're not following anyone!</td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>



