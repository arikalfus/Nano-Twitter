<div class="container-fluid">
  Following <span class="badge"><%= users.size %></span>
  <div class="row well" style="background-color: transparent">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <% unless users.empty? %>
          <% users.each do |user| %>
            <tr>
              <td class="text-center"><span><img src=<%= user[:image] %> alt="avatar" class="img-thumbnail" style="width:50px;height:50px"> <i><a href="/nanotwitter/v1.0/users/<%= user[:username] %>"><%= user[:username] %></span></td>
              </tr>
          <% end %>
        <% end %>
        <% if users.empty? %>
          <tr>
            <td class="text-center">You're not following anyone!</td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>



