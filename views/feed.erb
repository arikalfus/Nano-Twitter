<div class="container-fluid">
  <div class="row well" style="background-color: transparent">
    <div class="table-responsive">
      <table class="table table-striped">
        <% tweets.each do |tweet, user| %>
          <tr>
            <td class="text-left"><span><img src=<%= user[:image] %> alt="avatar" class="img-thumbnail" style="width:50px;height:50px"><%= tweet[:text] %> - <i><a href="/nanotwitter/v1.0/users/<%= user[:username] %>"><%= user[:username] %> </a></i>, <%= tweet[:created_at].localtime.asctime %></span></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>