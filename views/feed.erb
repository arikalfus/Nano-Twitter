<div class="container-fluid">
  <div><b>Tweets</b><span class="badge"><%= tweets.size %></span></div>
  <div class="row well" style="background-color: transparent">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <% unless tweets.empty? %>
          <% tweets.each do |tweet, user| %>
            <tr>
              <td><span><img src=<%= user[:image] %> alt="avatar" class="img-thumbnail" style="width:50px;height:50px"> <%= tweet[:text] %> - <i><a href="/nanotwitter/v1.0/users/<%= user[:username] %>"><%= user[:username] %> </a></i>, <%= tweet[:created_at].localtime.asctime %></span></td>
            </tr>
          <% end %>
        <% end %>
        <% if tweets.empty? %>
          <tr>
            <td class="text-center">There are no tweets! You should follow someone or try tweeting a message!</td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>