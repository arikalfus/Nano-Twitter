<div class="container-fluid">
  <div class="row well" style="background-color: transparent">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <% tweets.each do |tweet, user| %>
          <tr>
            <td class="text-center"><%= tweet[:text] %> - <i><a href="/nanotwitter/v1.0/users/<%= user[:username] %>"><%= user[:username] %></a></i>, <%= tweet[:created_at].localtime.asctime %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>